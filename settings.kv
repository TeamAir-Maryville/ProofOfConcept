<RoundedButton@Button>
    background_normal: ''
    background_color: (0,0,0,0)
    color: (0, 0, 0, 1) #Text Color
    canvas.before:
        Color:
            rgba: (1, 199/255, 146/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [50]
<RoundedButtonRecommendation@Button>
    background_normal: ''
    background_color: (0,0,0,0)
    color: (0, 0, 0, 1) #Text Color
    canvas.before:
        Color:
            rgba: (252/255, 149/255, 45/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [50]
<RoundedEnterButton@Button>
    background_normal: ''
    background_color: (0,0,0,0)
    color: (0, 0, 0, 1) #Text Color
    canvas.before:
        Color:
            rgba: (252/255, 149/255, 45/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [50]
<RoundedTextInput@TextInput>
    background_normal: ''
    background_color: (1, 243/255, 217/255, 1)
    color: (1, 1, 1, 1) #Text Color
    multiline: False
    size_hint: .5,1
    pos_hint: { "center_x": .5}
    valign: 'center'
    halign: 'center'
    canvas.after:
        Color:
            rgba: (1,1,1,1)
<RoundedHomeButton@Button>
    font_size: "17sp"
    font_name: "Times"
    background_normal: ''
    background_color: (0,0,0,0)
    color: (0, 0, 0, 1) #Text Color
    size_hint: .12,1
    pos_hint: { "center_x": .1}
    on_release:
        app.root.current = "HomeScreen"
    canvas.before:
        Color:
            rgba: (252/255, 149/255, 45/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [50]
