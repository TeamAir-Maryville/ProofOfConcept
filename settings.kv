WindowManager:
    HomeScreen:
    AddMovieScreen:
    AddTvScreen:
    GetRecommendationScreen:
    GetRecommendationMovieScreen:
    GetRecommendationTvScreen:

<HomeScreen>:
    canvas.before:
        Color:
            rgba: (1, 222/255, 167/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size


    name: "HomeScreen"

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 50
        spacing: 20
        Label:
            text: "Watcher"
            font_size: "70sp"
            size_hint: 1,1
            color: (0, 0, 0, 1) #Text Color
            font_name: "Gabriola"
        RoundedButton:
            text: "Add Show"
            font_size: "40sp"
            size_hint: .75,1
            pos_hint: { "center_x": .5}
            font_name: "Times"
            on_release: app.root.current = "AddTvScreen"
        RoundedButton:
            text: "Add Movie"
            font_size: "40sp"
            size_hint: .75,1
            pos_hint: { "center_x": .5}
            font_name: "Times"
            on_release: app.root.current = "AddMovieScreen"
        RoundedButtonRecommendation:
            text: "Watch Now"
            font_size: "40sp"
            size_hint: .75,1
            pos_hint: { "center_x": .5}
            color: (0, 0, 0, 1) #Text Color
            font_name: "Timesbd"
            on_release: app.root.current = "GetRecommendationScreen"
        Label:
            text: ""
            size_hint: .5,.5



<AddMovieScreen>:
    canvas.before:
        Color:
            rgba: (1, 222/255, 167/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    name: "AddMovieScreen"

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        RoundedHomeButton:
            text: "Home"
        Label:
            text: "Add Movie"
            font_size: "60sp"
            font_name: "Gabriola"
            size_hint_y: 8
            color: (0,0,0,1)
        Label:
            text: 'Insert Title'
            color: (0,0,0,1)
            font_size:'20dp'
            font_name: "Times"
            padding: 1,1
            text_size: self.size
            halign: 'center'
            valign: 'center'
        RoundedTextInput:
            id: title
        Label:
            text: 'Insert Duration (Minutes)'
            color: (0,0,0,1)
            font_size:'20dp'
            font_name: "Times"
            padding: 5,5
            text_size: self.size
            halign: 'center'
            valign: 'center'
        RoundedTextInput:
            id: duration
        Label:
            text: ""
            size_hint: .5,.5
        RoundedEnterButton:
            text: "Enter"
            font_size: "40sp"
            font_name: "Timesbd"
            size_hint: .5,2
            pos_hint: { "center_x": .5}
            on_release:
                root.addMovie(title, duration)
                app.root.current = "HomeScreen"

        Label:
            text: ""
            size_hint: .5,.5


