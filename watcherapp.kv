BoxLayout:

<BoxLayout>:
    orientation: "vertical"
    Label:
        text: "Watcher"
        font_size: "60sp"
        size_hint: 1,1
        # x, center_x, right
        # y, center_y, top
        pos_hint: { "center_x": .5}
    Button:
        text: "Add Show"
        font_size: "40sp"
        size_hint: .75,1
        pos_hint: { "center_x": .5}
    Button:
        text: "Add Movie"
        font_size: "40sp"
        size_hint: .75,1
        pos_hint: { "center_x": .5}
    Label:
        text: ""
        size_hint: .5,.5


<MainWidget>:
    Label:
        text: "Watcher"
        # Width x Height
        size: "100dp", "50dp"
        pos: "150dp", "300dp"
        font_size: "40sp"
    Button:
        text: "Add Show"
        # Width x Height
        size: "100dp", "50dp"
        pos: "100dp", "100dp"
        # RGBA
        color: 0,0,1,1
    Button:
        text: "Add Movie"
        # Width x Height
        size: "100dp", "50dp"
        pos: "200dp", "100dp" 